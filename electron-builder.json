{
  "appId": "com.rotion.app",
  "productName": "Rotion",
  "githubRepository": "angelopedroso/Notepad-Electron",
  "publish": [
    {
      "provider": "github",
      "owner": "angelopedroso",
      "repo": "Notepad-Electron",
      "token": "${GH_TOKEN}"
    }
  ],
  "directories": {
    "output": "dist"
  },
  "win": {
    "target": "nsis",
    "artifactName": "Rotion-Setup.exe",
    "icon": "resources/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "installerIcon": "resources/icon.ico",
    "uninstallerIcon": "resources/icon.ico",
    "uninstallDisplayName": "Rotion"
  },
  "mac": {
    "target": "dmg",
    "icon": "resources/icon.icns"
  },
  "linux": {
    "target": "AppImage"
  },
  "files": [
    "**/*",
    "!dist/**/*-unpacked",
    "!out/**"
  ],
  "asar": null
}
